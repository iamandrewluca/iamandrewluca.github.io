---
import { Image } from "astro:assets";
import Layout from "../layouts/Layout.astro";
import Socials from "../components/Socials.astro";
import { Contributions } from "../components/Contributions";
import { CalendarCountTextUpdate } from "../components/CalendarCountTextUpdate";
import { avatarUrl } from "../utils";
import { Calendar } from "../components/Calendar";
---

<Layout>
	<main>
		<div
			class="mb-5 grid grid-cols-1 rounded-2xl bg-white p-10 shadow-2xl md:grid-cols-3"
		>
			<div class="border-b p-5 text-center md:border-b-0 md:border-r">
				<Image
					src={avatarUrl}
					width={256}
					height={256}
					format="webp"
					class="mx-auto mb-5 h-32 w-32 rounded-full bg-avatar-blur bg-cover bg-no-repeat shadow-xl"
					alt="Andrei Luca"
					fetchpriority="high"
					loading="eager"
				/>
				<h1 class="mb-3 text-3xl">Andrei Luca</h1>
				<a
					href="https://allindevelopers.com"
					class="inline-block rounded bg-gray-200 px-3 py-2 text-sm hover:bg-green-300"
				>
					‚ù§Ô∏è&nbsp;&nbsp;<code>All In Developer</code>
				</a>
			</div>
			<div class="col-span-2 flex items-center p-5">
				<Socials />
			</div>
		</div>
		<Contributions>
			<Calendar>
				<!-- Who the fuck does this ü§£ -->
				<CalendarCountTextUpdate client:load />
			</Calendar>
		</Contributions>
	</main>
</Layout>
